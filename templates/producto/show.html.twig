{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
    <body class="producto">
    <div style="text-align: center; background-color: #2A3132; margin-left: 136px; margin-right: 136px; height: 55px; padding-bottom: 10px">
    <h1 style="text-align:center; text-shadow: 2px 3px #763626;">Producto</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categoria</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr style="font-size: 15px;">
                <td>{{ producto.id }}</td>
                <td>{{ producto.categoria }}</td>
                <td>{{ producto.nombre }}</td>
                <td>$ {{ producto.precio }}</td>
                <td>{{ producto.stock }}</td>
            </tr>
        </tbody>
    </table>
    
    <div style="text-align: center; background-color: #2A3132; margin-left: 136px; margin-right: 136px; padding-top: 5px; padding-bottom: 5px;">
    <a href="{{ path('producto_edit', {'id': producto.id}) }}">editar</a>
    </div>
    <div style="text-align: center; background-color: #2A3132; margin-left: 136px; margin-right: 136px; margin-bottom: 20px; height: 27px;">
    <a href="{{ path('producto_index') }}">volver a la lista</a>
    </div>

    <div style="margin-left: 430px; margin-top: -17px;">
    {{ include('producto/_delete_form.html.twig') }}
    </div>

    </body>
{% endblock %}
